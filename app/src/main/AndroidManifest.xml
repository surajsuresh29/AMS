<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bosscorp.ams">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseAttendanceDetails"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".AddAttendance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChooseAccount"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ParentLogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentLogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FacultyLogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FacultyDashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentDashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ParentDashboard"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>