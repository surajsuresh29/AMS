    package="com.bosscorp.ams">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".CoordinatorReport" />
        <activity android:name=".ChooseBatch" />
        <activity android:name=".TeacherAttendanceReport" />
        <activity android:name=".StudentAttendanceReport" />
        <activity android:name=".AttendanceReport" />
        <activity android:name=".AddStudent" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseAttendanceDetails" />
        <activity
            android:name=".AddAttendance" />
        <activity
            android:name=".ChooseAccount"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ParentLogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentLogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FacultyLogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FacultyDashboard" />
        <activity
            android:name=".StudentDashboard" />
        <activity
            android:name=".ParentDashboard" />
    </application>

</manifest>